<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<script type="text/javascript" src="js/echarts.min.js" ></script>
		<link rel="stylesheet" href="css/basic.css" />
	</head>
	<body>
		<div id="show">
			<div id="hanju" class="weizi" style="width: 900px;height:400px;"></div>
		</div>
		<script type="text/javascript" src="js/jquery.js" ></script>
<script>
	var myChart = echarts.init(document.getElementById('hanju'));
	myChart.setOption({
		tooltip: {
			trigger: 'item',
			formatter: "{a} <br/>{b}: {c} ({d}%)"
		},
		legend: {
			orient: 'vertical',
			x: 'left',
			data: []
		},
		series: [{
			name: '访问来源',
			type: 'pie',
			radius: ['50%', '70%'],
			avoidLabelOverlap: false,
			label: {
				normal: {
					show: false,
					position: 'center'
				},
				emphasis: {
					show: true,
					textStyle: {
						fontSize: '30',
						fontWeight: 'bold'
					}
				}
			},
			labelLine: {
				normal: {
					show: false
				}
			},
			data: []
		}]
	});
	var xData = [];
	var yData = [];
	$.ajax({
		type:"get",
		url:"/vhas/handler/video/type",
		async:true,
		dataType:"json",
		success:function(data){
			var newdata = data.data.types;
			function duixiangsshuzu (value,name){
				this.value = value;
				this.name = name;
			}
			for(var i=0;i<newdata.length;i++){
				yData.push(newdata[i].name);
				xData.push(new duixiangsshuzu(newdata[i].click,newdata[i].name));
			}
			
			myChart.setOption({
			legend: {

			data: yData
			},
			series: [{
				// 根据名字对应到相应的系列
				data: xData
			}]
		});
		}
	});
</script>
	</body>
</html>
