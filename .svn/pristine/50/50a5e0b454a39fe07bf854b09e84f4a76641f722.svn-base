<!DOCTYPE html>
<html>

<head>
<meta charset="UTF-8">
<title></title>
<style>
* {
	margin: 0px;
	padding: 0px;
}

.demo {
	width: 980px;
	height: 108px;
	border-bottom: 1px solid #b8c0cc;
	margin: 0px auto;
}

.tupian {
	float: left;
	border-radius: 4px;
	overflow: hidden;
}

.tupian img {
	display: block;
	height: 64px;
	width: 64px;
	border-radius: 64px;
	margin: 0 auto;
	border: 2px solid transparent;
	position: relative;
	z-index: 10;
	float: left;
	margin-top: 22px;
}

.num {
	display: block;
	width: 70px;
	height: 90px;
	line-height: 90px;
	text-align: center;
	font-size: 36px;
	font-weight: bold;
	color: #b8c0cc;
	font-family: simhei;
	float: left;
	margin: 9px auto;
}

.info {
	margin-left: 0px;
	width: 780px;
	margin-top: 19px;
	display: block;
	float: right;
	height: 70px;
	padding-right: 0px;
}

.title {
	height: 20px;
	line-height: 20px;
	overflow: hidden;
	font-weight: bold;
	font-size: 14px;
}

.detail {
	margin-top: 20px;
	color: #99a2aa;
	width: 770px;
	height: 16px;
	display: block;
	float: left;
	font-size: 12px;
}

.data-box {
	margin-right: 20px;
	width: 80px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	display: inline-block;
	vertical-align: top;
	height: 14px;
	line-height: 12px;
}

#Slogan1 {
	width: 320px;
}

.demo:hover {
	border: 1px solid skyblue;
}

a {
	outline: 0;
	color: black;
	text-decoration: none;
	cursor: pointer;
}

a:hover {
	color: #00a1d6;
}
</style>
</head>

<body>
	<div id="show" class="show">
		<div class="demo">
			<div class="num">1</div>
			<div class="tupian">
				<img src="img/1.jpg" />
			</div>
			<div class="info">
				<div class="title">赵博文赵博文赵博文赵博文赵博文赵博文</div>
				<div class="detail">
					<span class="data-box" id="click"> 8.7万 </span> <span
						class="data-box" id="type"> 科技 </span> <span class="data-box"
						id="authe"> 作者 </span>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="js/jquery.js"></script>
	<script>
		/*function change(id){
			var url = "zuopingxiangqing.html?id="+id;
			document.location.href = url;
		}*/
		//var sign =parent.document.getElementById("ishow");
		//console.log(sign);
		//var namepingjie = 'json/'+signname+'.json';
		//console.log(namepingjie);
		//var UrlName = 'j';
		$.ajax({
			type : "get",
			url : "/vhas/handler/author/top",
			async : true,
			dataType : "json",
			success : function(data) {
				var newdata = data.data.authors;
				//console.log(newdata);
				var AddNew = "";
				//console.log(newdata);
				for (var i = 0; i < newdata.length; i++) {
					var DemoImg = newdata[i].img;
					var DemoId = newdata[i].Id;
					//console.log(DemoImg);
					var DemoName = newdata[i].name;

					var DemoGender = newdata[i].gender;
					//console.log(DemoName);
					if (DemoGender == "") {
						DemoGender = '保密';
					}
					var DemoFans = newdata[i].fans;
					var DemoAttention = newdata[i].attention;
					var DemoWorks = newdata[i].works;
					var DemoSlogan = newdata[i].slogan;
					if (DemoImg == null) {
						DemoImg = 'img/1.jpg';
					}

					AddNew += '<div class="demo">' + '<div class="num">'
							+ (i + 1) + '</div>' + '<div class="tupian">'
							+ '<img src="'+DemoImg+'" />' + '</div>'
							+ '<div class="info">'
							+ '<a href = "authorxiangqing.html' + '?ID='
							+ DemoId + '">' + '<div class="title">' + DemoName
							+ '</div>' + '</a>' + '<div class="detail">'
							+ '<span class="data-box" id="click">' + '性别：'
							+ DemoGender + '</span>'
							+ '<span class="data-box" id="type">' + '粉丝：'
							+ DemoFans + '</span>'
							+ '<span class="data-box" id="Attention1">' + '关注：'
							+ DemoAttention + '</span>'
							+ '<span class="data-box" id="Works1">' + '作品：'
							+ DemoWorks + '</span>'
							+ '<span class="data-box" id="Slogan1">'
							+ DemoSlogan + '</span>' + '</div>' + '</div>'
							+ '</div>';
					//console.log(AddNew);
				}
				//console.log($(".show"));
				$(".show").empty().append(AddNew);
			}
		});
	</script>
</body>

</html>